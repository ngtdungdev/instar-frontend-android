<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.VoiceCallActivity">

    <ImageButton
        android:id="@+id/btnEndCall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/btn_end_call"
        />

    <RelativeLayout
        android:id="@+id/layoutComponent"
        android:layout_width="match_parent"
        android:background="@drawable/button_background_00"
        android:layout_height="match_parent"
        android:layout_marginBottom="65dp">
        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                app:cardCornerRadius="100dp">
                <ImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="2dp"
                    android:src="@drawable/backgroud_radius_grey" />
            </androidx.cardview.widget.CardView>

        </FrameLayout>
        <TextView
            android:id="@+id/time"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:text="00:00"
            android:layout_below="@+id/frameLayout"
            android:layout_centerHorizontal="true">
        </TextView>
        <ImageView
            android:id="@+id/yourCamera"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_width="120dp"
            android:layout_height="200dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_background_call">
        </ImageView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/btnCameraOn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_camera_on" />

        <ImageButton
            android:id="@+id/btnCameraOff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_camera_off" />
        <ImageButton
            android:id="@+id/btnMicOn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_mic_on" />

        <ImageButton
            android:id="@+id/btnMicOff"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ic_mic_off" />
        <ImageButton
            android:id="@+id/btnSwitchCamera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_switch_camera" />
    </LinearLayout>
</RelativeLayout>
